<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mundas26 | Portfolio</title>
    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Portfolio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container d-lg-inline-flex justify-content-end">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo" style="height: 60px; width: 60px;" src="~/images/LOGO WHITE.png" />Mundas26
                </a>
                <div class="switch-container ms-auto">
                    <input type="checkbox" class="checkbox" id="toggleBtn" />
                    <label class="switch" for="toggleBtn">
                        <i class="fas fa-moon"></i>
                        <i class="fas fa-sun"></i>
                        <div class="ball"></div>
                    </label>
                </div>

                <button class="navbar-toggler" id="nav-icon" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-block justify-content-between">
                    <ul class="navbar-nav text-uppercase ms-auto">
                        <li class="nav-item text-center">
                            <a class="nav-link " asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Project">Projects</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Education">Education</a>
                        </li>
                        <li class="nav-item text-center">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Skill">Skills</a>
                        </li>
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown text-center">
                                <a class="nav-link dropdown-toggle" style="color: inherit;" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Manage</a>
                                <div class="dropdown-menu">
                                    <a class="nav-link dropdown-item-text text-center" style="color: inherit" asp-area="Admin" asp-controller="Category" asp-action="Index">Add Category</a>
                                    <a class="nav-link dropdown-item-text text-center" style="color: inherit" asp-area="Admin" asp-controller="Project" asp-action="Index">Add Project</a>
                                    <a class="nav-link dropdown-item-text text-center" style="color: inherit" asp-area="Admin" asp-controller="Education" asp-action="Index">Add Education</a>
                                    <a class="nav-link dropdown-item-text text-center" style="color: inherit" asp-area="Admin" asp-controller="Certification" asp-action="Index">Add Certification</a>
                                    <a class="nav-link dropdown-item-text text-center" style="color: inherit" asp-area="Admin" asp-controller="Skill" asp-action="Index">Add Skills</a>
                                </div>
                            </li>
                        }
                    </ul>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <partial name="_LoginPartial" />
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="container text-center">
            &copy; 2023 - Made with <i class="bi bi-heart-fill"></i> by: Mundas26
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/hambuger.js" asp-append-version="true"></script>
    <script src="~/js/darkmode.js" asp-append-version="true"></script>
    <script src="~/js/animation.js" asp-append-version="true"></script>
    <script src="~/js/underline.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>