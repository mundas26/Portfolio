@using Portfolio.Models.ViewModel;
@model SkillVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success ml-0">
        <div class="row">
            <div class="col-12 text-center p-2">
                <h2 class="text-white py-2">@(Model.Skill.Id != 0 ? "Update" : "Create") Skills</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Skill.Id" hidden />
            <input asp-for="Skill.StackImage" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Skill.Name" class="form-control" autocomplete="off" placeholder="name@example.com">
                            <label asp-for="Skill.Name" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Skill.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="Skill.StackImage" class="ms-2 text-muted"></label>
                            <span asp-validation-for="Skill.StackImage" class="text-danger"></span>
                        </div>
                        <div class="row pt-3">
                            <div class="col-6 col-md-3">
                                @if (Model.Skill.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {       
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Skill" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                    Back to list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Skill.StackImage" style="width: 100%; border-radius: 5px; border: 1px solid #bbb9b9" />
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_validationscriptspartial" />
}