@model Education
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Category
            </h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.SchoolName" class="p-0"></label>
            <input asp-for="@Model.SchoolName" class="form-control">
            <span asp-validation-for="@Model.SchoolName" class="text-danger mt-2"></span>
        </div><div class="mb-3 row p-1">
            <label asp-for="@Model.Course" class="p-0"></label>
            <input asp-for="@Model.Course" class="form-control">
            <span asp-validation-for="@Model.Course" class="text-danger mt-2"></span>
        </div><div class="mb-3 row p-1">
            <label asp-for="@Model.Address" class="p-0"></label>
            <input asp-for="@Model.Address" class="form-control">
            <span asp-validation-for="@Model.Address" class="text-danger mt-2"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back of list</a>
            </div>
        </div>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}